# Configuración de NanoEditor
# Copia este archivo a .env y configura tus valores

# Gemini API Key (Requerido para AI Assistant)
# Obtén tu API key en: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-api-key-here

# Configuración del Editor
EDITOR_THEME=dark
EDITOR_FONT_SIZE=14
EDITOR_FONT_FAMILY=monospace

# Configuración de AI
AI_TIMEOUT=60
AI_MAX_TOKENS=2048
AI_MODEL=models/gemini-2.5-flash

# Configuración de Autocompletado
AUTOCOMPLETE_ENABLED=true
AUTOCOMPLETE_DELAY=500

# Configuración de Resaltado de Sintaxis
SYNTAX_HIGHLIGHT_ENABLED=true
SYNTAX_HIGHLIGHT_STYLE=monokai
